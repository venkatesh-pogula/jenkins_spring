node ('node_java_11') {
    triggers{
        cron ('H * * * *')
    }
        stage ('scm'){
            git 'https://github.com/venkatesh-pogula/jenkins_spring.git'
        }
        stage ('build'){
            sh '''cd /spring-petclinic/Jenkinsfile
                   mvn clean package'''
        }
        post{
        sucess {
            archive '**/*.jar'
            junit '**/TEST-*.xml'

            }
       } 
}       